<%=
  render(
    "shared/breadcrumb_heading",
    breadcrumbs: [
      { label: t("admin.index.heading"), href: admin_index_path },
      { label: t(".heading"), href: nil }
    ]
  )
%>

<%= render 'layouts/flash', flash: flash %>

<table class='admin-users-index-table'>
  <thead>
    <tr>
      <td class='name'><%= t('.header.name') %></td>
      <td class='email'><%= t('.header.email') %></td>
      <td class='roles'><%= t('.header.role') %></td>
      <td class='roles'><%= t('.header.status') %></td>
      <td class='actions'><%= t('.header.actions') %></td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr class='admin-users-index-table__row' data-id='<%= id_for(user) %>'>
      <td class='name'><%= name_for(user) %></td>
      <td class='email'><%= user.email %></td>
      <td class='roles'><%= role_for(user) %></td>
      <td class='status'><%= status_for(user) %></td>
      <td class='actions'><%= (actions_for(user) || '-').html_safe %></td>
    </tr>
    <% end %>
  </tbody>
</table>
